{{!
    @template theme_boost/cover_image_selector

    Context variables required for this template:
    * accepttypes - The type of file accepted to be uploaded as cover image

    Example context (json):
    {
        "accepttypes": "image/jpeg"
    }
}}

<div id="snap-coverimagecontrol">
    <label tabindex="0" class="btn btn-sm btn-file btn-secondary state-visible" for="snap-coverfiles"><span>{{#str}}changecoverimage, theme_snap{{/str}}</span>
       <input tabindex="-1" id="snap-coverfiles" name="snap-coverfiles[]" type="file" accept="{{accepttypes}}"/>
    </label>
    <div id="snap-changecoverimageconfirmation">
        <button class="btn btn-sm btn-success ok">{{#str}}save, admin{{/str}}</button>
        <button class="btn btn-sm btn-danger cancel">{{#str}}cancel, moodle{{/str}}</button>
    </div>
</div>
