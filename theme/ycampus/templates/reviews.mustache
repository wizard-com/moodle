{{> theme_ycampus/average-rating}}
    <div class="row">
        <div class="col-sm-7">
            <hr/>
            <div class="review-block">
                {{#reviews}}
                <div class="row">
                    <div class="col-sm-3">
                        <img src="http://dummyimage.com/60x60/666/ffffff&text=No+Image" class="img-rounded">
                        <div class="review-block-name"><a href="{{url}}">{{username}}</a></div>
                        <div class="review-block-date">{{timecreated}}</div>
                    </div>
                    <div class="col-sm-9">
                        <div class="review-block-rate">
                            {{#gold_block_count}}
                            <button type="button" class="btn btn-warning btn-sm" aria-label="Left Align">
                                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                            </button>
                            {{/gold_block_count}}
                            {{#grey_block_count}}
                            <button type="button" class="btn btn-default btn-grey btn-sm" aria-label="Left Align">
                                <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                            </button>
                            {{/grey_block_count}}
                        </div>
                        <div class="review-block-title">{{username}}'s comment</div>
                        <div class="review-block-description">{{comment}}</div>
                    </div>
                </div>
                <hr/>
                 {{/reviews}}
            </div>
        </div>
    </div>
