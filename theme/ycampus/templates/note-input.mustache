    <form id="review-form" accept-charset="UTF-8" action="" method="post">

        <textarea class="form-control animated" cols="50" id="new-review" name="comment" placeholder="Enter your review here..." rows="5"></textarea>


        <div class="text-right" style="padding-top: 10px">

            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-danger" href="#" id="close-review-box" style="display:none;">Cancel</a>
        </div>
    </form>
<div id="cards">
    {{#notes}}
    <div class="card notes-card mod-{{modid}}">
        <div class="card-title">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-9 col-9 note-form-cols">
                    <i style="margin-left: 12px; margin-top: 10px" class="fa fa-calendar"></i> {{timecreated}}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-3 col-3 note-form-cols">
                    <div class="row">
                        <i class="btn fa fa-edit"></i>
                        <i class="btn fa fa-trash"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{notecontent}}
        </div>
    </div>
    {{/notes}}
</div>
