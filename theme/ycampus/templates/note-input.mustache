<div id="note-form" class="well well-sm card">
    <div class="card-title row">
        <div class="col-lg-8 col-md-8 col-sm-9 col-9 note-form-cols">
            <h5 id="note-form-heading">Note</h5>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-3 col-3 note-form-cols">
            <a class="btn btn-warning" href="#reviews-anchor" style="margin-right: 22px" id="open-note-box">Add Note</a>
        </div>
    </div>

    <div class="row" id="post-note-box" style="display:none;">
        <div class="col-md-12">
            <form style="padding: 20px" accept-charset="UTF-8" action="" method="post">
                <textarea class="form-control animated" cols="50" id="new-note" name="notes" placeholder="Enter your notes here..." rows="5"></textarea>

                <div class="text-right" style="padding-top: 10px">
                    <button class="btn btn-warning" type="submit">Save</button>
                    <a class="btn btn-secondary" href="#" id="close-note-box" style="display:none;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="cards">
    {{#notes}}
    <div class="card notes-card mod-{{modid}}">
        <div class="card-title">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-9 col-9 note-form-cols">
                    <i style="margin-left: 12px; margin-top: 10px" class="fa fa-calendar"></i> {{timecreated}}
                </div>
                <div class="col-lg-4 col-md-4 col-sm-3 col-3 note-form-cols">
                    <div class="row">
                        <i class="btn fa fa-edit"></i>
                        <i class="btn fa fa-trash"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{notecontent}}
        </div>
    </div>
    {{/notes}}
</div>
