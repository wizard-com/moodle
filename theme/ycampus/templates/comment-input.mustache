<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="well well-sm">
                <div class="text-right">
                    <a class="btn btn-success btn-green" href="#reviews-anchor" id="open-review-box">Leave a Review</a>
                </div>

                <div class="row" id="post-review-box" style="display:none;">
                    <div class="col-md-12">
                        <form id="review-form" accept-charset="UTF-8" action="" method="post">
                            <input id="ratings-hidden" name="rating" type="hidden">

                            <div class="form-group" id="rating-ability-wrapper">
                                <label class="control-label" for="rating">
                                    <input type="hidden" id="selected_rating" name="selected_rating" value="" required="required">
                                </label>
                                <h2 class="bold rating-header" style="">
                                    <span class="selected-rating">0</span><small> / 5</small>
                                </h2>
                                <button type="button" class="btnrating btn btn-secondary" data-attr="1" id="rating-star-1">
                                </button>
                                <button type="button" class="btnrating btn btn-secondary" data-attr="2" id="rating-star-2">
                                </button>
                                <button type="button" class="btnrating btn btn-secondary" data-attr="3" id="rating-star-3">
                                </button>
                                <button type="button" class="btnrating btn btn-secondary" data-attr="4" id="rating-star-4">
                                </button>
                                <button type="button" class="btnrating btn btn-secondary" data-attr="5" id="rating-star-5">
                                </button>
                            </div>
                            <textarea class="form-control animated" cols="50" id="new-review" name="comment" placeholder="Enter your review here..." rows="5"></textarea>


                          <div class="text-right" style="padding-top: 10px">

                                <button class="btn btn-primary" type="submit">Save</button>
                                <a class="btn btn-danger" href="#" id="close-review-box" style="display:none;">Cancel</a>
                          </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<h4>Related Courses</h4>
<div class="row">
    {{#related_courses}}
    <div class="col-lg-3 col-md-4 col-sm-12">
        <a href="http://localhost/moodle/course/view.php?id={{id}}">
            <div class="card related">
                <img class="card-img-top related-course-img related-img-height" src="{{img_url}}" alt="Card image">
                <div class="card-img-overlay darken">
                    <h4 class="card-title text-white">{{fullname}}</h4>
                </div>
            </div>
        </a>
    </div>
    {{/related_courses}}
</div>
